import openai
import gradio
Openai.api_key = "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"
Messages = [{“role”: “system”, “content”: “You are a financial expert that specializes in personal finance investment and negotiation”}]
def CustomChatGPT (user_input):
messages.append({“role”: “user”, “content”: user_input})
response = openai.ChatCompletion.create(
    model = “gpt-3.5-turbo”,
    messages = messages
)
ChatGPT_reply = response[“choices”][0][“message”][“content”]
messages.append({“role”: “assistant”, “content”: ChatGPT_reply})
return ChatGPT_reply
demo = gradio.Interface(fn=CustomChatGPT, inputs = “text”, outputs = “text”, 
title = “FinanceBroBot”)

demo.launch(share=True)